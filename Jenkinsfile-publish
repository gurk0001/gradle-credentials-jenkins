pipeline {
    agent any

    environment {
        ARCHIVA = credentials('archiva')
    }
    stages {
        stage('Publish') {
            steps {
                git branch: 'master', credentialsId: 'git', url: 'https://github.com/tkgregory/gradle-credentials-jenkins.git'

                sh './gradlew publish'
            }
        }
    }
}